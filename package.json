{
  "name": "domitrius-dot-dev",
  "description": "The personal site for Domitrius Clark",
  "version": "1.0.1",
  "repository": "https://github.com/domitriusclark/mdnext-base.git",
  "author": "domitriusclark",
  "main": "next.config.js",
  "scripts": {
    "build": "next build",
    "dev": "next",
    "start": "next start",
    "format": "yarn format:index && yarn format:pages && yarn format:src",
    "format:index": "prettier --write \"*.{js,json,md}\"",
    "format:pages": "prettier --write \"pages/**/*.js\"",
    "format:src": "prettier --write \"src/**/*.{js,md,mdx}\""
  },
  "dependencies": {
    "@chakra-ui/react": "^2.2.1",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@fontsource/nunito": "^4.5.9",
    "framer-motion": "^5.6.0",
    "fuse.js": "^6.6.2",
    "next": "^12.2.0",
    "next-seo": "^4.28.1",
    "notion-utils": "^4.12.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.4.0",
    "react-intersection-observer": "^8.34.0",
    "react-notion": "^0.10.0",
    "use-cloudinary": "^4.1.1"
  },
  "devDependencies": {
    "@netlify/plugin-nextjs": "^4.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ],
    "pages/**/*.js": [
      "prettier --write"
    ],
    "src/**/*.{js,md,mdx}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "keywords": [
    "nextjs",
    "mdx"
  ],
  "license": "ISC"
}
